# Development Environment Variables for ZipDuck
# This file is for local development only

# Database
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
MYSQL_ROOT_PASSWORD=CHANGE_ME_IN_PRODUCTION
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=zipduck

# Google Cloud APIs
GOOGLE_GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_VISION_API_KEY=your-vision-api-key-here

# Public Data API (공공데이터포털)
PUBLIC_DATA_API_KEY=your-public-data-api-key-here

# Application Settings
SPRING_PROFILES_ACTIVE=dev
LOG_LEVEL=DEBUG
SERVER_PORT=8080

# Frontend
VITE_API_BASE_URL=http://localhost:8080/api/v1

# Security (Development - use secure values in production!)
JWT_SECRET=dev-jwt-secret-key-change-in-production-12345678
JWT_EXPIRATION=86400000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload
MAX_FILE_SIZE=10MB
UPLOAD_DIR=./uploads/pdfs

# PDF Processing
PDF_CACHE_TTL=3600

# Async Processing
ASYNC_CORE_POOL_SIZE=5
ASYNC_MAX_POOL_SIZE=10
ASYNC_QUEUE_CAPACITY=100

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Email/Notifications (Optional for dev)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@zipduck.com

# Monitoring & Observability (Optional for dev)
# SENTRY_DSN=your-sentry-dsn
# SENTRY_ENVIRONMENT=development

# Development Tools
SPRING_DEVTOOLS_RESTART_ENABLED=true
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true

# JWT
JWT_SECRET=your-256-bit-secret-key-here-minimum-32-characters

# OAuth2
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
KAKAO_CLIENT_ID=your-kakao-app-key
KAKAO_CLIENT_SECRET=your-kakao-client-secret

# AWS SES (Email)
AWS_SES_SMTP_USERNAME=your-ses-smtp-username
AWS_SES_SMTP_PASSWORD=your-ses-smtp-password

# Firebase (Push Notification)
FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/firebase-service-account.json